source ~/.vimrc

let mapleader = " "

" Close current tab
nnoremap <leader>bd :action CloseContent<CR>
" Close all tabs to the right
nnoremap <leader>br :action CloseAllToTheRight<CR>
" Close all tabs to the left
nnoremap <leader>bl :action CloseAllToTheLeft<CR>
" Close other tabs
nnoremap <leader>bo :action CloseAllEditorsButActive<CR>

" Execute last executed command
nnoremap <leader>cec :action Run<CR>

" Execute at current line
nnoremap <leader>cel :action RunClass<CR>

" Go to next error
noremap ]e :action GotoNextError<CR>
" Go to previous error
noremap [e :action GotoPreviousError<CR>

" Comment line
nnoremap gcc :action CommentByLineComment<CR>

" Comment selected lines
vnoremap gc :action CommentByLineComment<CR>

" Find files
nnoremap <leader>ff :action GotoFile<CR>
" Find recent files
nnoremap <leader>fr :action RecentFiles<CR>
" Find jvm class
nnoremap <leader>fjc :action GotoClass<CR>

" Search Grep
nnoremap <leader>sg :action FindInPath<CR>

" Open menu action
noremap <leader>m :action MoreRunToolbarActions<CR>
